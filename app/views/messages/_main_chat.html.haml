.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__title
        = @group.name
      .chat-main__group-info__left-box__current-group
        .chat-main__group-info__left-box__current-group__member
          Member:
        .chat-main__group-info__left-box__current-group__name
          - @group.users.each do |user|
            = user.name
    .chat-main__group-info__right-box
      = link_to edit_group_path(@group), class:"edit" do
        .chat-main__group-info__right-box__edit
          Edit
  
  .chat-main__message-list
    = render @messages
  
  
  .chat-main__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .chat-main__form__mask
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'
     