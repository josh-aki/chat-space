.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      %p.side-bar__user-name__top-items__name
        = current_user.name
      %ul.side-bar__user-name__top-items__menu
        %li.side-bar__user-name__top-items__edit-user
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-bar__user-name__top-items__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__groups-list
    - current_user.groups.each do |group|
      .side-bar__groups-list__group
        = link_to '#', class:"link" do
          .side-bar__groups-list__group__name
            = group.name
          .side-bar__groups-list__group__message
            メッセージはまだありません。
    
  

